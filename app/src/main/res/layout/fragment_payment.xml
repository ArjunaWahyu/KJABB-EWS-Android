<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.auth.payment.PaymentFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/Text.Title"
                android:layout_marginBottom="16dp"
                android:text="@string/payment" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/EditText.AuthLayout"
                android:layout_marginBottom="8dp"
                app:hintTextAppearance="@style/EditTextLabel">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_email"
                    style="@style/EditText.AuthInput"
                    android:autofillHints="emailAddress"
                    android:background="@drawable/bg_input_auth"
                    android:hint="@string/email_address"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_choose_image"
                    style="@style/Text.Regular"
                    android:backgroundTint="#CCCCCC"
                    android:text="@string/choose_image"
                    android:textAllCaps="false" />

                <TextView
                    style="@style/Text.Regular"
                    android:layout_marginStart="8sp"
                    android:text="@string/proof_of_payment" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_image_name"
                style="@style/Text.Regular"
                android:layout_width="match_parent"
                android:layout_marginStart="24dp"
                android:visibility="gone"
                android:textAlignment="viewStart"
                android:textColor="@color/caribbean_green" />


            <Button
                android:id="@+id/btn_send"
                style="@style/Button.Auth"
                android:text="@string/send" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/payment_to_login"
                    style="@style/Text.SemiBold.Auth"
                    android:layout_marginEnd="32dp"
                    android:text="@string/login" />

                <TextView
                    android:id="@+id/payment_to_registration"
                    style="@style/Text.SemiBold.Auth"
                    android:layout_marginStart="32dp"
                    android:text="@string/registration" />

            </LinearLayout>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/loading_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

    </FrameLayout>

</ScrollView>